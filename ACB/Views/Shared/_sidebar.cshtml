<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ACB</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ACB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/dash.css" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav id="nav-custom" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow  ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ACB</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item dropdown nav-custom hide">
                            <a class="nav-link dropdown-toggle text-light" href="#" data-bs-toggle="dropdown" aria-expanded="false">Contractors</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="./search.html">Find Contractors</a></li>
                                <li><a class="dropdown-item" asp-controller="Quote" asp-action="QuoteForm">Get a Quote</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid ">

        <div class=" row over-lay">

            <div class=" col-1 dense ">

                <!-- side menu -->
                <div class="flex-shrink-0  side-menu" id="sb-dash" style="width: 280px;">
                    <div class="close">
                        <button id="close-menu" onclick="closeNav()">X</button>

                    </div>
                    <a href="/" class="d-flex align-items-center pb-3 mb-3 link-body-emphasis text-decoration-none border-bottom">
                        <span  class="fs-5 fw-semibold menu-txt"><div id="contractor-name">Kimmy Gibbler</div></span>
                    </a>
                    <ul class="list-unstyled ps-0">

                        <li class="mb-1 ">
                            <a href="./dashboard.html">
                                <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false" href="./dashboard.html">
                                    Home
                                </button>
                            </a>
                        </li>

                        <li class="mb-1 ">
                            <a href="./calendar.html">
                                <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false" href="./dashboard.html">
                                    Calendar
                                </button>
                            </a>
                        </li>

                        <li class="mb-1 ">
                            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                                Cases +
                            </button>
                            <div class="collapse sb-list-item" id="dashboard-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="./newcase.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">New Case</a></li>
                                    <li><a href="./all_cases.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">All Cases</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="mb-1">
                            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#orders-collapse" aria-expanded="false">
                                Orders +
                            </button>
                            <div class="collapse sb-list-item" id="orders-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="./neworder.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">New Order</a></li>
                                    <li><a href="./allorders.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">All Orders</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="mb-1">
                            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#clients-collapse" aria-expanded="false">
                                Clients +
                            </button>
                            <div class="collapse sb-list-item" id="clients-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="./newclient.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">New Client</a></li>
                                    <li><a href="./allclients.html" class="link-body-emphasis d-inline-flex text-decoration-none rounded">All Clients</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="border-top my-3"></li>

                        <li class="mb-1">
                            <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed menu-txt sb-list-item" data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
                                Account +
                            </button>
                            <div class="collapse sb-list-item" id="account-collapse" style="">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <!-- <li><a href="#" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Financial</a></li> -->
                                    <li><a href="#" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Profile</a></li>
                                    <li><a href="#" class="link-body-emphasis d-inline-flex text-decoration-none rounded">Sign out</a></li>
                                </ul>
                            </div>
                        </li>

                        

                    </ul>

                </div>

                <button class="btn btn-toggle d-inline-flex align-items-center border-0 collapsed menu-txt col-1 side-menu" id="side-btn" @* data-bs-toggle="collapse" *@ onclick="openNav()" data-bs-target="#sb-dash" aria-expanded="true">
                    |||
                </button>

            </div>

            <!-- table area -->
            <div class="col-9">

                <div @* class="container-fluid" *@>
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>

                


            </div>

        </div>

    </div>

    



    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ACB - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script>
        function openNav() {
            
            const element = document.getElementById("sb-dash");
            
            element.style.width = "280px";
            element.style.padding = "5px";

            var elements = document.getElementsByClassName("sb-list-item");

            for (var i = 0; i < elements.length; i++) {

                //set font size to dissappear
                element.getElementsByClassName("sb-list-item")[i].style.fontSize = "2rem";

            }

            
            document.getElementById("close-menu").style.display = "block";

            document.getElementById("contractor-name").style.fontSize = "1.5rem";
            
        }
        function closeNav() {

            const element = document.getElementById("sb-dash");
            //document.getElementById("sb-dash").style.width = "0px";
            element.style.width = "0px";
            element.style.padding = "0";

            var elements = document.getElementsByClassName("sb-list-item");

            for (var i = 0; i < elements.length; i++) {
                
                //set font size to dissappear
                element.getElementsByClassName("sb-list-item")[i].style.fontSize = "0rem";

            }

            
            document.getElementById("close-menu").style.display = "none";

            document.getElementById("contractor-name").style.fontSize = "0rem";

            
        }
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>